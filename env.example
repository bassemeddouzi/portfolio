# Base de donn√©es PostgreSQL
# Required: Database host (use 'localhost' for local, or your database provider's host for production)
DB_HOST=localhost
# Optional: Database port (default: 5432)
DB_PORT=5432
# Required: Database name
DB_NAME=portfolio_db
# Required: Database username
DB_USER=postgres
# Required: Database password
DB_PASSWORD=your_password
# Optional: Enable SSL for database connection (set to 'true' for production with SSL, e.g., Vercel Postgres, AWS RDS)
DB_SSL=false

# NextAuth
# Required: The canonical URL of your site (use your production URL in production)
# Example: https://yourdomain.com or https://your-app.vercel.app
NEXTAUTH_URL=http://localhost:3000
# Required: Secret key for JWT encryption (generate a random string for production)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-change-in-production-use-a-long-random-string

# Node Environment
# Optional: Set to 'production' in production environment
NODE_ENV=development

